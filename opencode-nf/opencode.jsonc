{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "atlassian": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-atlassian"
      ],
      "environment": {
        "JIRA_URL": "{env:JIRA_URL}",
        "JIRA_USERNAME": "{env:JIRA_USERNAME}",
        "JIRA_API_TOKEN": "{env:JIRA_API_TOKEN}"
      }
    },
    "slack": {
      "type": "local",
      "command": [
        "slack-mcp-server",
      ],
      "environment": {
        "SLACK_MCP_XOXP_TOKEN": "{env:SLACK_USER_TOKEN}",
      }
    }
  },
}
