{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",

  "model": "openai/gpt-5.2-codex",
  "small_model": "opencode/claude-haiku-4-5",

  "autoupdate": true,

  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
          "pnpm",
          "dlx",
          "@playwright/mcp@latest",
          "--headless",
      ],
      "enabled": true
    },
  },
  "tools": {
      "playwright*": false,
      "context7*": false,
  },
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.envrc": "deny",
    },
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git diff*": "allow",
      "git show *": "allow",
      "git switch *": "allow",
      "git log*": "allow",
      "git fetch*": "allow",
      "git branch": "allow",
      "git branch --show-current": "allow",
      "git stash*": "allow",
      "./tools/*": "allow",
      "bazel help": "allow",
      "bazel query*": "allow",
      "bazel test*": "allow",
      "bazel build*": "allow",
      "bazel run //:gazelle*": "allow",
      "bazel run :gazelle*": "allow",
      "ls*": "allow",
      "mkdir *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "file *": "allow",
      "wc *": "allow",
      "jq*": "allow",
      "yq*": "allow",
      "timeout *": "allow",
      "echo *": "allow",
      // it's ok to use head as part of a pipe, as long as it doesn't refer a filepath
      "head": "allow",
      "head -?": "allow",
      "head -??": "allow",
      "head -???": "allow",
      "tail": "allow",
      "kubectl config current-context": "allow",
      "kubectl get*": "allow",
      "kubectl describe*": "allow",
      "kubectl logs*": "allow",
      "helm list*": "allow",
      "psql -c \"\\conninfo\"": "allow",
      "psql -c \"\\l\"": "allow",
      "find* *-exec*": "ask",
      "find* *-execdir*": "ask",
      "find* *-ok*": "ask",
      "find* *-delete*": "ask",
      "find*": "ask",
    },
  },
  "provider": {
    //"litellmproxy": {
